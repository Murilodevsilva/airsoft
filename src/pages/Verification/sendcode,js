import * as MailComposer from 'expo-mail-composer';
import sendgrid from '@sendgrid/mail';

sendgrid.setApiKey('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');

async function sendEmail(to, subject, body) {
  const message = {
    to,
    from: 'YOUR_EMAIL',
    subject,
    text: body,
  };

  try {
    await sendgrid.send(message);
  } catch (error) {
    console.log(error);
  }
}

// Exemplo de uso
sendEmail('user@example.com', 'Verification Code', 'Your verification code is: 123456');
